        android:textSize="17.0sp"
        android:textColor="#ff000000"
        android:id="@id/sBarCleanSwitch"
        android:paddingTop="13.0dip"
        android:paddingBottom="13.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
