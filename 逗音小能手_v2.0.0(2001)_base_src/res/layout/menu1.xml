<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    android:scrollbars="none"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="8.0sp"
        android:paddingBottom="5.0sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="7.0sp"
        android:paddingEnd="2.0sp">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/copyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12.0sp"
            android:paddingEnd="12.0sp">
            <ImageView
                android:id="@id/copyBtnImg"
                android:layout_width="52.0sp"
                android:layout_height="52.0sp"
                android:layout_marginTop="6.0sp"
                android:layout_marginBottom="8.0sp"
                android:scaleType="centerCrop" />
            <TextView
                android:textSize="11.5sp"
                android:gravity="center"
                android:id="@id/copyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制链接" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/downBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12.0sp"
            android:paddingEnd="12.0sp">
            <ImageView
                android:id="@id/downBtnImg"
                android:layout_width="52.0sp"
                android:layout_height="52.0sp"
                android:layout_marginTop="6.0sp"
                android:layout_marginBottom="8.0sp"
                android:scaleType="centerCrop" />
            <TextView
                android:textSize="11.5sp"
                android:gravity="center"
                android:id="@id/downText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频下载" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/musicBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12.0sp"
            android:paddingEnd="12.0sp">
            <ImageView
                android:id="@id/musicBtnImg"
                android:layout_width="52.0sp"
                android:layout_height="52.0sp"
                android:layout_marginTop="6.0sp"
                android:layout_marginBottom="8.0sp"
                android:scaleType="centerCrop" />
            <TextView
                android:textSize="11.5sp"
                android:gravity="center"
                android:id="@id/musicText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音频下载" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/tabBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12.0sp"
            android:paddingEnd="12.0sp">
            <ImageView
                android:id="@id/tabBtnImg"
                android:layout_width="52.0sp"
                android:layout_height="52.0sp"
                android:layout_marginTop="6.0sp"
                android:layout_marginBottom="8.0sp"
                android:scaleType="centerCrop" />
            <TextView
                android:textSize="11.5sp"
                android:gravity="center"
                android:id="@id/tabText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UI设置" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/setBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12.0sp"
            android:paddingEnd="12.0sp">
            <ImageView
                android:id="@id/setBtnImg"
                android:layout_width="52.0sp"
                android:layout_height="52.0sp"
                android:layout_marginTop="6.0sp"
                android:layout_marginBottom="8.0sp"
                android:scaleType="centerCrop" />
            <TextView
                android:textSize="11.5sp"
                android:gravity="center"
                android:id="@id/otherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其它设置" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/coffeeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12.0sp"
            android:paddingEnd="12.0sp">
            <ImageView
                android:id="@id/coffeeBtnImg"
                android:layout_width="52.0sp"
                android:layout_height="52.0sp"
                android:layout_marginTop="6.0sp"
                android:layout_marginBottom="8.0sp"
                android:scaleType="centerCrop" />
            <TextView
                android:textSize="11.5sp"
                android:gravity="center"
                android:id="@id/coffeeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于模块" />
        </LinearLayout>
    </LinearLayout>
</HorizontalScrollView>